# STRING METOD

ism = 'Ahad'
familiya = 'Qayum'
ism_sharif = f"{ism} {familiya}"
print(ism_sharif.upper())


ism = 'Ahad'
familiya = 'Qayum'
ism_sharif = f"{ism} {familiya}"
print(ism_sharif.lower())


ism_sharif = 'james bond'
print(ism_sharif.title())


ism_sharif = 'james bond'
print(ism_sharif.capitalize())


print('james bond'.upper())

